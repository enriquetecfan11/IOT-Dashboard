---
import Layout from "../layouts/Layout.astro";

const response = await fetch("http://192.168.1.125:4000/api/miniestacion");
const data = await response.json();
---

<Layout title="Medidas.">
    <div class="container">
        <h1>Medidas Miniestacion</h1>
        <p>Medidas Miniestacion wifi con altura, presion y temperatura</p>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>dispositivo</th>
                    <th>Fecha</th>
                    <th>Temperatura</th>
                    <th>Altura</th>
                    <th>Presion</th>
                    <th>Luxes</th>
                    <th>Wifi RSSI</th>

                </tr>
            </thead>
            <tbody>
                {
                    data.map((medida) => (
                        <tr>
                            <td>{medida.id}</td>
                            <td>{medida.dispositivo}</td>
                            <td> {new Date(medida.hora).toLocaleDateString()}</td>
                            <td>{medida.temperatura}</td>
                            <td>{medida.altura}</td>
                            <td>{medida.presion}</td>
                            <td>{medida.luxes}</td>
                            <td>{medida.wifiRsii}</td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</Layout>

<style>
    main {
        padding: 20px;
    }

    h1{
        text-align: center;
    }
    p{
        text-align: center;
        font-size: medium;
    }
    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    table {
        table-layout: fixed;
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        border: 1px solid black;
        text-align: center;
        padding: 8px;
    }

    thead th {
        width: 25%;
    }

    thead {
        background-color: #333;
        color: white;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 2%;
    }
</style>
