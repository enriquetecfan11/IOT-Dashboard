---
import Layout from "../layouts/Layout.astro";

const response = await fetch("http://192.168.1.33:4000/api/medidas");
const data = await response.json();
---
<Layout title="Medidas Wifi.">
    <div class="container">
        <h1>Medidas Wifi</h1>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Device</th>
                    <th>Date</th>
                    <th>Wind Speed</th>
                    <th>Wind Direction</th>
                    <th>Temperature</th>
                    <th>Humidity</th>
                    <th>pluviometer</th>
                    <th>Luxometer</th>
                    <th>WiFi RSSi</th>
                </tr>
            </thead>
            <tbody>
                {
                    data.map((medida) => (
                        <tr>
                            <td>{medida.id}</td>
                            <td>{medida.dispositivo}</td>
                            <td>
                                {new Date(medida.hora).toLocaleDateString()}
                            </td>
                            <td>{medida.wind}</td>
                            <td>{medida.dirWind}</td>
                            <td>{medida.temperatura}</td>
                            <td>{medida.humedadAire}</td>
                            <td>{medida.rain}</td>
                            <td>{medida.luxes}</td>
                            <td>{medida.wifiRssi}</td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</Layout>

<style>
    :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(0, 0%, 100%);
        --color-bg: hsl(0, 0%, 33%);
        --color-border: hsl(17, 24%, 90%);
    }
    main {
        padding: 20px;
    }
    h1 {
        text-align: center;
    }
    p {
        text-align: center;
        font-size: medium;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    table {
        table-layout: fixed;
        width: 100%;
        border-collapse: collapse;
        color: --text-color;
    }

    th,
    td {
        border: 1px solid black;
        text-align: center;
        padding: 8px;
    }

    thead th {
        width: 25%;
    }

    thead {
        background-color: #333;
        color: white;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 2%;
    }
</style>
